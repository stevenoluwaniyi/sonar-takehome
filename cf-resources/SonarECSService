Parameters:
  ClusterID:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String

  PrivateSubnet1:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String

  PrivateSubnet2:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String

  PrivateSubnet3:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String


  PublicSubnet1:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String

  PublicSubnet2:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String

  PublicSubnet3:
    Description: CF Stackname for Availability Zones for private subnet
    Type: String

  SecurityGroup:
    Description: TaskDefinition Stackname for security group for subnet
    Type: String
    Default: SonarASG

  EnvironmentName:
      Description: An environment name that is prefixed to resource names
      Type: String
      Default: SonarECSService

  TargetGroupARN1:
      Description: Stack name for Targetgroup ARN
      Type: String

  TargetGroupARN2:
      Description: Stack name for Targetgroup ARN
      Type: String

  TargetGroupARN3:
      Description: Stack name for Targetgroup ARN
      Type: String

  CapacityProvider1:
      Description: Stack name for Targetgroup ARN
      Type: String

  CapacityProvider2:
      Description: Stack name for Targetgroup ARN
      Type: String

  CapacityProvider3:
      Description: Stack name for Targetgroup ARN
      Type: String

  TaskDefinitionID:
      Description: Taskdefinition ID
      Type: String



Resources:
  ECSService1:
    Type: AWS::ECS::Service
    Properties:
      CapacityProviderStrategy: 
        - 
          CapacityProvider: !Ref CapacityProvider1
          Weight: 1
          Base: 0
      Cluster: !Ref ClusterID
      DesiredCount: 1
      NetworkConfiguration: 
        AwsvpcConfiguration:
            Subnets:
              - !Ref PublicSubnet1
            SecurityGroups:
              - !Ref SecurityGroup
      ServiceName: !Sub "${EnvironmentName}-ECSService1"
      Tags:
        - Key: Name
          Value: !Sub "${EnvironmentName}-ECSService1"
      TaskDefinition: !Ref TaskDefinitionID


  ECSService2:
    Type: AWS::ECS::Service
    Properties:
      CapacityProviderStrategy: 
        - 
          CapacityProvider: !Ref CapacityProvider2
          Weight: 1
          Base: 0
      Cluster: !Ref ClusterID
      DesiredCount: 1
      NetworkConfiguration: 
        AwsvpcConfiguration:
            Subnets:
              - !Ref PublicSubnet2
            SecurityGroups:
              - !Ref SecurityGroup
      ServiceName: !Sub "${EnvironmentName}-ECSService2"
      Tags:
        - Key: Name
          Value: !Sub "${EnvironmentName}-ECSService2"
      TaskDefinition: !Ref TaskDefinitionID

  ECSService3:
    Type: AWS::ECS::Service
    Properties:
      CapacityProviderStrategy: 
        - 
          CapacityProvider: !Ref CapacityProvider3
          Weight: 1
          Base: 0
      Cluster: !Ref ClusterID
      DesiredCount: 1
      NetworkConfiguration: 
        AwsvpcConfiguration:
            Subnets:
              - !Ref PublicSubnet3
            SecurityGroups:
              - !Ref SecurityGroup
      ServiceName: !Sub "${EnvironmentName}-ECSService3"
      Tags:
        - Key: Name
          Value: !Sub "${EnvironmentName}-ECSService3"
      TaskDefinition: !Ref TaskDefinitionID

