Parameters:
  VPCStackParameterName:
    Description: Name of stack to import
    Type: String
    Default: SonarVPC
  EnvironmentName:
      Description: An environment name that is prefixed to resource names
      Type: String
      Default: SonarGateway

Resources:
  InternetGatewayAttachment:
    Type: AWS::EC2::VPCGatewayAttachment
    Properties:
      VpcId: 
        Fn::ImportValue: 
          'Fn::Sub': '${VPCStackParameterName}-VPCID'
      InternetGatewayId: !Ref InternetGateway

  InternetGateway:
    Type: AWS::EC2::InternetGateway
    Properties:
      Tags:
        - Key: Name
          Value: !Ref EnvironmentName

Outputs:
  InternetGatewayAttachment:
    Description: A reference to the created subnet
    Value: !Ref InternetGatewayAttachment
    Export:
      Name: !Sub "${AWS::StackName}-InternetGatewayAttachment"
