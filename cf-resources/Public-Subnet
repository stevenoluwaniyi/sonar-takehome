Parameters:
  EnvironmentName:
    Description: An environment name that is prefixed to resource names
    Type: String

  PublicSonarSubnet1:
    Description: Please enter the IP range (CIDR notation) for the public subnet in the first Availability Zone
    Type: String
    Default: 10.192.10.0/24

  PublicSonarSubnet2:
    Description: Please enter the IP range (CIDR notation) for the public subnet in the first Availability Zone
    Type: String
    Default: 10.192.50.0/24

  PublicSonarSubnet3:
    Description: Please enter the IP range (CIDR notation) for the public subnet in the first Availability Zone
    Type: String
    Default: 10.192.60.0/24

  StackParameterName:
    Description: Name of stack to import
    Type: String


Resources:
  PublicSubnet1:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: 
        Fn::ImportValue:
          'Fn::Sub': '${StackParameterName}-VPCID'
      AvailabilityZone: !Select [ 0, !GetAZs '' ]
      CidrBlock: !Ref PublicSonarSubnet1
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: !Sub "${EnvironmentName}1"


  PublicSubnet2:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: 
        Fn::ImportValue:
          'Fn::Sub': '${StackParameterName}-VPCID'
      AvailabilityZone: !Select [ 1, !GetAZs  '' ]
      CidrBlock: !Ref  PublicSonarSubnet2
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: !Sub "${EnvironmentName}2"


  PublicSubnet3:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: 
        Fn::ImportValue:
          'Fn::Sub': '${StackParameterName}-VPCID'
      AvailabilityZone: !Select [ 2, !GetAZs  '' ]
      CidrBlock: !Ref PublicSonarSubnet3 
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: !Sub "${EnvironmentName}3"

Outputs:
  PublicSubnetID1:
    Description: A reference to the created subnet
    Value: !Ref PublicSubnet1
    Export:
      Name: !Sub "${AWS::StackName}-PublicSubnetID1"

  PublicSubnetID2:
    Description: A reference to the created subnet
    Value: !Ref PublicSubnet2
    Export:
      Name: !Sub "${AWS::StackName}-PublicSubnetID2"

  PublicSubnetID3:
    Description: A reference to the created subnet
    Value: !Ref PublicSubnet3
    Export:
      Name: !Sub "${AWS::StackName}-PublicSubnetID3"